<div class="row">
  <label>Matter</label>
  <div class="inputs">
    <span class="input_wrapper blank" >
      <span id="matter_select">
      <%=select :note, :matter_id, matters.collect {|u| [ u.clipped_name, u.id ]}, {:prompt=>"Please Select"},:onchange =>"update_contact_select(this.value)"%>
      </span>
    </span>

  </div>
</div>
