<div class="section_content">
  <div id="modal_new_task_errors" class=""><div id="loader1" style="display:none;"><img src="/images/loading.gif" alt="loading..."></img></div></div>
  <% remote_form_for :task ,:before=>'show_spinner();',:url => do_complete_note_wfm_note_path(@note),:html=>{:class=>"search_form general_form from_edit"}, :loading=>"disableAllSubmitButtons('buttons_to_disable');", :complete=>"enableAllSubmitButtons('buttons_to_disable','Complete');" do |f| %>
    <input type="checkbox" name="reassign_user" id="chk_reassign_task" style="display:none"/>
    <input class="radio" name="task_0_radio_1" value="BackofficeTask" type="radio" checked style="display:none"/>
    <input class="radio" name="user_type" value="" type="radio" checked style="display:none"/>
    <fieldset>
      <div class="forms">
        <div class="row">
          <label>Client</label>
          <div class="inputs">
            <%=@note.receiver.full_name%>
            <br/>
            <i><%=@note.company.name if @note.company %></i>
          </div>
        </div>
        <div class="row">
          <label>Matter / Contact</label>
          <div class="inputs">
            <%=@note.matter.name if @note.matter rescue '-' %>
            <%=@note.contact.full_name if @note.contact rescue '-' %>
          </div>
        </div>
        <div class="row">
          <label>Note</label>
          <div class="inputs" style="width:76%; background-color: #e7f3f8; border: 1px solid #D7D7D7;">
            <%=@note.description %>
          </div>
        </div>
        <div id="_loader_img" ></div>
       <%= render :partial =>"complete" %>
        <br class="clear" />
        <div class="button_div">
          <span class="button send_form_btn buttons_to_disable"><span><span id="button_pressed">Complete</span></span><input type="submit" name="" onclick="return check_validation_on_note('complete_form','<%=@back_office_user%>');"/></span>
          <span class="button send_form_btn ml10 buttons_to_disable"><span><span>Cancel</span><input type="button" name="" onclick="tb_remove()"/></span></span>
          <br class="clear" />
        </div>
      </div>
    </fieldset>
  <%end%>
</div>
