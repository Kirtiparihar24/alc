<% form_for(@role) do |f| %>
  <%if(@role.errors.length > 0)%>
    <div class='errorCont'>
      <%= f.error_messages %>
      <div class="clear"></div>
    </div>
  <%end%>
  <div class="form">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td width="25%" align="left" valign="top"><label><%= f.label :name %> <span>*</span></label></td>
        <td><%= f.text_field :name,:class=>"field size4" %></td>
      </tr>
      <tr>
        <td align="left" valign="top">&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr>
        <td align="left" valign="middle"><label><%=t(:label_Categories)%></label></td>
        <td><% @categories.each do |cat| %>
            <%= check_box_tag(
              "role[category_list][#{cat.id}]",
              "1",
              @role.categories.detect{|d| d == cat}) %>
            <%= "#{cat.name}"%><br />
          <%end%></td>
      </tr>
      <tr>
        <td align="left" valign="top">&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </table>
  </div>
  <div class="buttons">
    <%= f.submit 'Save' , :class => 'button'%>
    <%= link_to 'Back', roles_path , :class => 'button'%>
  </div>
<% end %>