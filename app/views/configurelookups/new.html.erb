<div style="text-align: center"><%= @lookup.type%> </div>
<div class="box-head"> <h2><%=t(:text_new_lookup)%> </h2></div>
<% form_tag "/configurelookups/create" do %>  
  <div class="form">
    <%if(@lookup.errors.length > 0)%>
      <div class='errorCont'>
        <%=u.error_messages %>
        <div class="clear"></div>
      </div>
    <%end%>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <%=hidden_field_tag "type",@lookup.type%>
      <tr>
        <td width="25%" align="left" valign="top"><label><%=t(:label_value)%> <span>*</span></label></td>
        <td><%=text_field_tag "lookup[lvalue]",'',:class=>"field size4"%></td>
      </tr>
      <tr>
        <td align="left" valign="top">&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </table>
  </div>
  <div class="buttons">
    <%=submit_tag t(:label_create) , :class=>"button"%>
    <%=link_to t(:label_back),configurelookups_path(:type => @lookup.type), :class=>"button"%>
  </div>
<% end %>