<div class="box-head"><h2><%=t(:text_edit_company_activity_rate)%></h2></div>
<% form_for(@company_activity_rate) do |f| %>
  <div class="form">
    <%if(@company_activity_rate.errors.length > 0)%>
      <div class='errorCont'>
        <%=f.error_messages %>
        <div class="clear"></div>
      </div>
    <%end%>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td width="25%" align="left" valign="top"><label><%=t(:text_company)%></label></td>
        <td width="75%"><%= @company_activity_rate.company.name%></td>
      </tr>
      <tr><td colspan="2">&nbsp;</td></tr>
      <tr>
        <td width="25%" align="left" valign="top"><label><%=t(:label_activity)%></label></td>
        <td width="75%"><%= @rate_activity%></td>
      </tr>
      <tr><td colspan="2">&nbsp;</td></tr>
      <tr>
        <td align="left" valign="top"><label><%=t(:label_billing_rate)%><span>*</span></label></td>
        <td><%= f.text_field :billing_rate ,:maxlength=>11,:onblur => "check_rate(this);",:class=>"field size4"%></td>
      </tr>
      <tr><td colspan="2">&nbsp;</td></tr>
    </table>
  </div>
  <div class="buttons">
    <%= f.submit t(:text_update), :class=>"button"%>
    <%= link_to t(:label_cancel), rate_cards_url, :class=>"button" %>
  </div>
<% end %>