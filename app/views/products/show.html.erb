<div class="gridDiv">
  <div class="titleHead"><%=t(:text_product_details)%></div>
  <div class="gryBox">
    <div class="adminForm">
      <% form_for @product,:url => {:action => 'index'} do |f| %>
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="adminForm">
          <tr>
            <td>
              <table>
                <tr>
                  <td class="textBlue11"  align="right"><label for="name"><%=t(:label_name)%></label></td>
                  <td><%= @product.name %></td>
                </tr>
                <tr>
                  <td class="textBlue11"  width="48%" align="right"><label for="description"><%=t(:label_description)%></label></td>
                  <td width="52%"><%= @product.description %></td>
                </tr>
                <tr>
                  <td  class="textBlue11" align="right"><label ><%=t(:label_cost)%></label></td>
                  <td align="left"><%= @product.cost %></td>
                </tr>
              </table>
            </td>
            <td align="left">
              <table border="0">
                <tr>
                  <td  class="textBlue11" >
                    <label ><%=t(:label_subroducts)%></label></td>
                  <td style="padding-top: 0em" ><%for subProd in @product.subproducts  %>
                      <br></br><%=  subProd.name%>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td  class="textBlue11" >
                    <label ><%=t(:label_parent_products)%></label> </td>
                  <td><%for parentProd in @product.product_dependents.find_all %>
                      <br></br><%= parentProd.name%>
                    <% end %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr>
            <td colspan="2" align="center">
                <input type="submit" value="<%=t(:label_back)%>" name="Back" class="button"/>
            </td>
          </tr>
        </table>
      <% end %>
      <br class="clear" />
    </div>
  </div>
</div>