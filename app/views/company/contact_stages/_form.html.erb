<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td width="25%" align="left" valign="top"><label>Select Stage<span>*</span></label></td>
    <td width="75%"><%= f.select :lvalue, @company.contact_stages.collect{|cs|[cs.lvalue]}.uniq, {:include_blank => '--Select--'},:class=>"field size4"%></td>
  </tr>
  <tr>
    <td align="left" valign="top">&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td align="left" valign="top"><label><%=t(:label_stage_name)%><span>*</span></label></td>
    <td><%= f.text_field :alvalue,:style=>"width:240px;",:class=>"field size4" %></td>
  </tr>
  <tr>
    <td align="left" valign="top">&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
</table>
<div class="txtC Pb8" id="loading_gif" style="display: none">
  <%= image_tag"/images/loading.gif" %>
</div>
<div class="buttons">
  <%=submit_tag t(:label_save), :class=>"button"%>
  <%= link_to(t(:label_cancel), "#", :class=>"button",:onclick=>"tb_remove();")%>
</div>
