<div class="p5 gridTable">
  <div class="linkOuter w45 fr txtR mt5" style="float:right;text-align:right;">
    <%= link_to(t(:text_new),new_company_doc_source_path(@company),:rel=>"facebox") %>
  </div>
  <table width="100%" cellspacing="0" cellpadding="0" border="0" align="left" id="doc_sources">
    <tr>
      <th width="25%"><%=t(:text_document_source)%></th>
      <th width="25%">Custom Document Source</th>
      <th width="25%"><%=t(:text_actions)%></th>
    </tr>
    <%@company.doc_sources.each do |doc_source|%>
      <tr class="<%=cycle("bg1", "bg2")%>">
        <td>
          <%= hidden_field_tag "support_#{doc_source.id}", doc_source.id, :class=>"supportFieldID" %>
          <span class="textBlue11Height20">&nbsp;&nbsp;
            <%= doc_source.lvalue %>
          </span>
        </td>
        <td>
          <span class="textBlue11Height20">&nbsp;&nbsp;
            <%= doc_source.alvalue %>
          </span>
        </td>
        <td>
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}), edit_company_doc_source_path(@company,doc_source),:rel=>"facebox")%>
        </td>
      </tr>
    <%end%>
  </table>
</div>
<br class="clear" />