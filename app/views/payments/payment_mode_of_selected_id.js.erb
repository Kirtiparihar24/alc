<%  if(@payment_mode == "Cheque") %>
  jQuery("#cheque_details").show();
  jQuery("#paypal_details").hide();
<% elsif(@payment_mode == "Paypal") %>
  jQuery("#paypal_details").show();
  jQuery("#cheque_details").hide();
