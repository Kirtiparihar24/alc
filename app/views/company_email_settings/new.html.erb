<% content_for :company_selection do %>
  <div id="topheadContainer"><div class="title fl"><%#= @company.name  if (session[:company_id].present? and current_user.role?:livia_admin) %></div></div>
<% end %>
<div class="box-head"><h2><%=t(:label_new)%>&nbsp;<%=t(:label_Company_Email_Settings)%></h2></div>
<% form_tag(:action=>"create",:company_id=>params[:company_id]) do |f| %>
  <%if(@company_smtp_email_setting.errors.length > 0|| @company_pop3_email_setting.errors.length>0)%>
    <div class='errorCont'>
      <%=error_messages_for(:company_smtp_email_setting) %>
      <%=error_messages_for(:company_pop3_email_setting) %>
      <div class="clear"></div>
    </div>
  <%end%>
  <div class="form">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">

      <%= hidden_field_tag "company_email_setting[SMTP][setting_type]",'SMTP' %>
      <%= hidden_field_tag "company_id",params[:company_id] %>
      <%= hidden_field_tag "company_email_setting[SMTP][company_id]",params[:company_id] %>
      <%= hidden_field_tag "company_email_setting[POP3][setting_type]",'POP3' %>
      <%= hidden_field_tag "company_email_setting[POP3][company_id]",params[:company_id] %>
      <tr>
        <td colspan="2" align="left" valign="top" class="mid-box-head"><h2 class="left"><%=t(:label_SMTP_Settings)%></h2></td>
        <td>&nbsp;</td>
        <td colspan="2" align="left" valign="top" class="mid-box-head"><h2 class="left">POP3 Settings</h2></td>
      </tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr>
        <td width="17%" align="left" valign="top"><label><%=t(:label_Domain)%> <span>*</span></label></td>
        <td width="26%"><%=text_field_tag "company_email_setting[SMTP][domain]",params[:company_email_setting].present? ? params[:company_email_setting][:SMTP][:domain] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
        </td><td width="21%" align="left" valign="top"><label><%=t(:label_address)%> <span>*</span></label></td>
        <td width="25%"><%=text_field_tag "company_email_setting[POP3][address]",params[:company_email_setting].present? ? params[:company_email_setting][:POP3][:address] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
       </tr>
       <tr><td colspan="5">&nbsp;</td></tr>
      <tr>
        <td width="21%" align="left" valign="top"><label><%=t(:label_address)%> <span>*</span></label></td>
        <td width="25%"><%=text_field_tag "company_email_setting[SMTP][address]",params[:company_email_setting].present? ? params[:company_email_setting][:SMTP][:address] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
        <td><label><%=t(:label_Port)%> <span>*</span></label></td>
        <td width="25%"><%=text_field_tag "company_email_setting[POP3][port]",params[:company_email_setting].present? ? params[:company_email_setting][:POP3][:port] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
      </tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr>
        <td width="17%" align="left" valign="top"><label><%=t(:label_Port)%> <span>*</span></label></td>
        <td><%=text_field_tag "company_email_setting[SMTP][port]",params[:company_email_setting].present? ? params[:company_email_setting][:SMTP][:port] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
        <td align="left" valign="top"><label><%=t(:label_user)%>&nbsp;<%=t(:label_name)%> <span>*</span></label></td>
        <td><%=text_field_tag "company_email_setting[POP3][user_name]",params[:company_email_setting].present? ? params[:company_email_setting][:POP3][:user_name] : '',:class=>"field size4"%></td>
      <td width="11%">&nbsp;</td>
      </tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr>
        <td width="17%" align="left" valign="top"><label><%=t(:label_user)%>&nbsp;<%=t(:label_name)%> <span>*</span></label></td>
        <td><%=text_field_tag "company_email_setting[SMTP][user_name]",params[:company_email_setting].present? ? params[:company_email_setting][:SMTP][:user_name] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
        <td width="21%" align="left" valign="top"><label><%=t(:label_password)%> <span>*</span></label></td>
        <td><%=password_field_tag "company_email_setting[POP3][password]",params[:company_email_setting].present? ? params[:company_email_setting][:POP3][:password] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
      </tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr>
        <td width="21%" align="left" valign="top"><label><%=t(:label_password)%> <span>*</span></label></td>
        <td><%=password_field_tag "company_email_setting[SMTP][password]",params[:company_email_setting].present? ? params[:company_email_setting][:SMTP][:password] : '',:class=>"field size4"%></td>
        <td width="11%">&nbsp;</td>
      </tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr>
        <td align="left" valign="top"><label><%=t(:label_Enable_SSL)%></label></td>
        <td><%=check_box_tag "company_email_setting[SMTP][enable_ssl]"%></td>
        <td>&nbsp;</td>
        <td align="left" valign="top"><label><%=t(:label_Enable_SSL)%></label></td>
        <td><%=check_box_tag "company_email_setting[POP3][enable_ssl]"%></td>
      </tr>
      <tr><td colspan="5">&nbsp;</td></tr>
      <tr>
        <td align="left" valign="top"><label><%=t(:label_Enable_Starttls_Auto)%></label></td>
        <td><%=check_box_tag "company_email_setting[SMTP][enable_starttls_auto]"%></td>
        <td>&nbsp;</td>
        <td align="left" valign="top"><label><%=t(:label_Enable_Starttls_Auto)%></label></td>
        <td><%=check_box_tag "company_email_setting[POP3][enable_starttls_auto]"%></td>
      </tr>
      <tr><td colspan="5">&nbsp;</td></tr>
    </table>
  </div>
  <div class="buttons">
    <%= submit_tag 'Save', :class=>"button"%>
    <%= link_to t(:label_cancel), company_email_settings_url, :class=>"button" %>
  </div>
<% end %>
