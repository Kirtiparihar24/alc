<%=render :partial=>'task_headers', :locals=>{:type=>'doc_submission'}%>
<div id="third">
  <br class="clear" />
  <div class="gryBox">
    <div class="gridTable" >
      <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <th width="12%"><%=t(:text_matter_name)%></th>
          <th width="12%"><%=t(:text_document_name)%></th>
          <th width="12%"><%=t(:text_document_description)%></th>
        </tr>
        <%unless @doc_submission.blank?%>
          <% @doc_submission.each do |doc|%>
            <tr class="<%=cycle("bg1", "bg2")%>">
              <td><%= doc.matter.name %></td>
              <td><%= doc.matter_client_task_detail.doc_name %></td>
              <td><%=doc.matter_client_task_detail.doc_details%></td>
            </tr>
          <%end%>
        <%else%>
          <tr><td colspan="3"><div class="warningCont m5"><%=t(:text_no_document_details_present)%></div></td></tr>
        <%end%>
      </table>
    </div>
  </div>
</div>