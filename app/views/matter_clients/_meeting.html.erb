<%=render :partial=>'task_headers', :locals=>{:type=>'meeting'}%>
<div id="third">
  <br class="clear" />
  <div class="gryBox">
    <div class="gridTable" >
      <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
          <th width="12%"><%=t(:text_matter_name)%></th>
          <th width="12%"><%=t(:text_meeting_date)%></th>
          <th width="12%"><%=t(:text_from_time)%></th>
          <th width="12%"><%=t(:text_to_time)%></th>
        </tr>
        <%unless @meetings.blank?%>
          <%@meetings.each do |meeting|%>
            <tr class="<%=cycle("bg1", "bg2")%>">
              <td><%=meeting.matter.name%></td>
              <td><%=raw livia_date_effect(meeting.complete_by)%></td>
              <td><%=raw meeting.matter_client_task_detail.from_timestrftime("%H:%M") if meeting.matter_client_task_detail.from_time%></td>
              <td><%=raw meeting.matter_client_task_detail.to_time.strftime("%H:%M") if meeting.matter_client_task_detail.to_time%></td>
            </tr>
          <%end%>
        <%else%>
          <tr><td colspan="4"><div class="warningCont m5"><%=t(:text_no_meeting_details_present)%></div></td></tr>
        <%end%>
      </table>
    </div>
  </div>
</div>