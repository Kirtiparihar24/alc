        <td>&nbsp;</td>
        <td align="left">&nbsp;</td>
      </tr>
      <tr align="right">
        <td>&nbsp;</td>
        <td align="left">
          <%= f.submit t(:text_save),:class=>'matters', :onclick => "return validate_field('matter_people_employee_user_id','Name cannot be blank');" %>
