<% accss_attr = visibility ? "" : 'class="additional_priv" style="display: none;"' %>
<tr <%= accss_attr %> >
  <td width="5%"><%=check_box_tag "check_all" ,'check_all',(@matter_people_client.can_view_client_docs? && @matter_people_client.can_view_client_comments? && @matter_people_client.can_control_matter_access? && @matter_people_client.can_enforce_version_control? && @matter_people_client.can_checkin_docs? && @matter_people_client.can_change_status_time_and_expense?),:onchange => "toggle_checked_entries();"%></td>
  <td align="left"> Select All</td>
</tr>
<tr <%= accss_attr %> >
  <td width="5%"><%=check_box_tag "additional_privs[]", 1, @matter_people_client.can_view_client_docs?,:class=>"entries"%></td>
  <td align="left"><%=t(:label_view_all_client_docs)%></td>
</tr>
