</tr>
<tr <%= accss_attr %> >
  <td><%=check_box_tag "additional_privs[]", 8, @matter_people_client.can_enforce_version_control?,:class=>"entries"%></td>
  <td align="left"><%=t(:label_ability_to_enforce_version_control)%></td>
</tr>
<tr <%= accss_attr %> >
  <td><%=check_box_tag "additional_privs[]", 32, @matter_people_client.can_checkin_docs?,:class=>"entries"%></td>
  <td align="left"><%=t(:label_check_in_documents_checked_out_by_others)%></td>
</tr>
<tr <%= accss_attr %> >
  <td><%=check_box_tag "additional_privs[]", 64, @matter_people_client.can_change_status_time_and_expense?,:class=>"entries" %></td>
