    <td align="left"><label><%= t(:label_member_till) %></label></td>
    <td align="left"><%= matter_people.text_field :end_date,  :value => @matter_people.end_date, :class => "date_picker", :onclick=>"livia_datepicker(this);", :size => "10" %></td>
