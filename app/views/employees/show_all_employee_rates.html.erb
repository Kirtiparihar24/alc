<div style="text-align: center"><div id="cmp_name"><label class="txtc"><%= @company.name %></label></div></div>
<div class="mt5">
  <div class="gridDiv">
    <div class="titleHead">
      <div class="fl"><%=t(:text_employee_rates)%></div>
      <br class="clear" />
    </div>
    <div class="gryBox">
      <div class="p5 gridTable">
        <table width="100%" border="0" cellpadding="0" cellspacing="0">
          <%unless @employee_rates.blank?%>
            <tr><td colspan="4" align="right" class="pr5"><%=will_paginate @employee_rates%><%=raw page_entries_info @employee_rates %></td></tr>
            <tr><td colspan="4"><br/></td></tr>
          <%end%>
          <tr>
            <th width="50%"><%=t(:text_employee)%></th>
            <th width="40%" ><%=t(:text_billing_rate)%></th>
            <th width="25%"><%=t(:text_actions)%></th>
          </tr>
          <% unless @employee_rates.blank? %>
           <%  @employee_rates.each do |employee| %>
            <tr class="<%=cycle("bg1", "bg2")%>">
              <td width="50%"><%= employee.full_employee_name %></td>
              <td width="40%"><%=h employee.billing_rate %></td>
              <td width="25%">
                <%= link_to(image_tag('/images/livia_portal/icon_edit.gif', {:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}), "/employees/edit_emp_rate/#{employee.id}" ) %>
              </td>
            </tr>
          <% end %>
          <%else%>
            <tr >
              <td colspan="3">
                <div class="warningCont m5">
                  <%=t(:text_no_records_found)%>
                </div>
              </td>
            </tr>
          <%end%>
          <%unless @employee_rates.blank?%>
            <tr><td colspan="4"><br/></td></tr>
            <tr><td colspan="4" align="right" class="pr5"><%=will_paginate @employee_rates%><%=raw page_entries_info @employee_rates %></td></tr>
            <tr><td colspan="4"><br/></td></tr>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div>
<br class="clear" />
<div class="txtC"><%= link_to t(:label_back), {:controller=>'rate_cards',:action => 'index'}, :class => "linkbutton" %></div>

