<div class="box-head"><h2><%=t(:text_employee_of_this_company)%></h2></div>
<div class="actionLinks"><%= link_to t(:label_new_employee), new_company_employee_path(@company)%></div>
<div class="table">
  <table  cellpadding="0" cellspacing="0" border="0" align="left" width="100%">
    <tr>
      <th width="50%"><%=t(:text_name)%></th>
      <th width="25%"><%=t(:text_email)%></th>
      <th width="25%" colspan="3"><%=t(:text_action)%></th>
    </tr>
    <%@employees.each do |employee|%>
      <tr>
        <td><%=employee.full_employee_name%></td>
        <td><%=employee.email%></td>
        <td><%=link_to(t(:text_edit), edit_company_employee_path(@company, employee))%> |
          <%=link_to(t(:text_delete), [@company,employee], :confirm => 'Are you sure?', :method => :delete)%>
        </td>
      </tr>
    <%end%>
  </table>
</div>