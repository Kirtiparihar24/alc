      <td>Owner</td>
      <td colspan="7" align="left">&nbsp;<%= select_tag :owner_user_id, options_for_select(@matter_peoples.collect{|p| [p.assignee.try(:full_name), p.employee_user_id] }, selected_employee), {:disabled => false} %></td>
