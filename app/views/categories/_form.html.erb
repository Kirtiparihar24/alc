<% form_for(@category) do |f| %>
  <%if(@category.errors.length > 0)%>
    <div class='errorCont'>
      <%= f.error_messages %>
      <div class="clear"></div>
    </div>
  <%end%>
  <div class="form">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td width="25%" align="left" valign="top"><label><%= f.label :name %>  <span>*</span></label></td>
        <td><%= f.text_field :name,:class=>"field size4" %></td>
      </tr>
      <tr>
        <td align="left" valign="top">&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr>
        <td align="left" valign="top"><label><%= f.label :description %></label></td>
        <td><%= f.text_area :description, :cols => 4, :rows => 10,:class=>"field size1"  %></td>
      </tr>
      <tr>
        <td align="left" valign="top">&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
      <tr>
        <td align="left" valign="top"><label><%= f.label :has_complexity %></label></td>
        <td><%= f.check_box :has_complexity %></td>
      </tr>
      <tr>
        <td align="left" valign="top">&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </table>
  </div>
  <div class="buttons">
    <%= f.submit 'Save' , :class => 'button'%>
    <%= link_to 'Back', categories_path , :class => 'button'%>
  </div>
<% end %>