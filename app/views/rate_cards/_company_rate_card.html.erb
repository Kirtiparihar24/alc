        <td align="left"><%= employee_activity_rate.billing_rate %></td>
        <td align="left"><%= link_to(image_tag('/images/livia_portal/icon_edit.gif', {:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}), edit_employee_activity_rate_path(employee_activity_rate)) %>
          <%= link_to(image_tag('/images/livia_portal/icon_reject.gif', {:alt =>"Deactivate", :title=>"Deactivate", :border => 0, :hspace => "0"}), employee_activity_rate, {:confirm => 'Are you sure?', :method => :delete}) %></td>
      </tr>
    <% end %>
  </table>
</div>
