<% if params[:popup] && params[:popup]=="client" %>
  <h4>Set Time Zone</h4>
<% end %>
<div class="w100 mt10">
  <div class="" align="center" id="loader" style="display:none;"><img src='/images/loading.gif' /></div>
  
<% remote_form_for :user, :url => {:action => 'set_user_time_zone', :id => get_employee_user_id} do |user| %>
<table width="100%" border="0" cellpadding="0" cellspacing="5" align="center" >
  <tr>
    <td width="20%" align="right"><%= user.label :time_zone, "Time Zone" %></td>
    <td width="80%" align="left" ><%= user.time_zone_select :time_zone, nil,:default => "Pacific Time (US & Canada)",:style=>{:width=>20} %></td>
  </tr>  
  <tr>
    <td  width="20%"></td>
    <td width="80%" align="left">
      <%if params[:height]%>
      <%= submit_tag t(:label_save) ,:onclick=>'return checkloader();'%>
      <input type="submit" value="<%= t(:text_cancel) %>" onclick=" parent.tb_remove();return false" id="cancel" />
      <%else%>
      <input type="submit" value="Save" />
      <input type="button" value="Cancel" onclick="jQuery.facebox.close();return false;"/>
      <%end%>
    </td>
  </tr>
</table>
<%end%>
  </div>
<br/>
<br/>
<div align="right" class="pagiText"><%=t(:label_page)%>&nbsp;4</div>
