<table>
  <tr>
    <td valign="top"> </td>
    <td valign="top">
      <h3><%= @user.full_name + "(#{@user.username})" %></h3>
      <% if !@user.title.blank? && !@user.company.blank? %>
        <%= "#{@user.title} at #{@user.company.name}" %>
      <% else %>
        <%= @user.title unless @user.title.blank? %>
        <%= @user.company.name unless @user.company.blank? %>
      <% end %>
      <br />
      <div>
        Email:
          <%= mail_to(@user.email) %>
          <% unless @user.alt_email.blank? %>
            <%= mail_to(@user.alt_email) %>
          <% end %>
      </div>
      <% if !@user.phone.blank? && !@user.mobile.blank? %>
        <div><%= "Phone: <b>#{@user.phone}</b>, Mobile: <b>#{@user.mobile}</b>" %></div>
      <% end %>
    </td>
  </tr>
</table>
