<div class="mt5" style="display:none;width:600px;" id="<%=id%>">
  <span style="float:right;">
    <img onclick="closeFaceBox();" title="close" alt="close" src="/images/livia_portal/icon_close.gif"/>
  </span>
  <div class="gridDiv">
    <div class="gridTable gryBox">
      <table width="100%" border="0" cellpadding="0" cellspacing="0" class="tableBg" align="center" style="font-size:100%;">
        <tr class ="f1 oppProspects"><th width="10%"><%=t(:text_title)%></th><th width="15%"><%=t(:text_user)%></th> <th width="55%"><%=t(:text_comment_details)%></th><th width="10%"><%=t(:text_created_at)%></th><th width="10%"><%=t(:text_document)%></th></tr>
        <tr>
          <td colspan="5" style="font-family:Arial;">
            <%= render :partial => "common/comment", :collection => client_comments%><br />
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
